<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressView">
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="backgroundDrawable" format="integer" />
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="currentProgress" format="integer" />
    </declare-styleable>

    <declare-styleable name="FeedbackView">
        <attr name="fvText" format="string" />
        <attr name="fvTextSize" format="dimension" />
        <attr name="fvTextColor" format="color" />
        <attr name="fvBackgroundDrawable" format="integer" />
        <attr name="fvMinValue" format="integer" />
        <attr name="fvMaxValue" format="integer" />
        <attr name="fvCurrentProgress" format="integer" />
        <attr name="fvStartButtonDrawable" format="integer" />
        <attr name="fvEndButtonDrawable" format="integer" />
        <attr name="fvEndButtonText" format="string" />
        <attr name="fvEndButtonTextSize" format="dimension" />
        <attr name="fvEndButtonTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ContentView">
        <attr name="cvText" format="string" />
        <attr name="cvTextColor" format="color" />
        <attr name="cvTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ActionView">
        <attr name="avWidth" format="dimension" />
        <attr name="avHeight" format="dimension" />
        <attr name="avMarginHorizontal" format="dimension" />
        <attr name="avMarginVertical" format="dimension" />
        <attr name="avTextColor" format="color" />
        <attr name="avTextSize" format="dimension" />
        <attr name="avBackgroundDrawable" format="reference" />
    </declare-styleable>
</resources>