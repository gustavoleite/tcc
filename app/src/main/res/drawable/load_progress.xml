<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="18dp"/>
            <solid android:color="#FFE0E0E0"/>
            <size android:height="26dp" android:width="763.5dp"/>
        </shape>
    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <stroke android:width="8dp" android:color="@android:color/transparent" />
                <corners android:radius="18dp"/>
                <solid android:color="#FFFDD835"/>
                <size android:height="19dp" android:width="162.5dp"/>
            </shape>
        </clip>
    </item>

</layer-list>